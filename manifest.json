{

  "manifest_version": 2,
  "name": "Faceblock",
  "version": "1.0",

  "description": "Kicks your butt when you try to get distracted with Facebook.",

  "icons": {
    "48": "icons/noface48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["faceblock.js"],
      "css": ["faceblock.css"],
      "run_at": "document_end"
    }
  ],

  "permissions": ["storage"]

}
